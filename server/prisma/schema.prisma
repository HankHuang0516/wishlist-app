generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int       @id @default(autoincrement())
  phoneNumber       String    @unique
  password          String
  apiKey            String?   @unique
  name              String?
  nicknames         String?
  realName          String?
  address           String?
  birthday          DateTime?
  avatarUrl         String?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  isAvatarVisible   Boolean   @default(true)
  isPhoneVisible    Boolean   @default(false)
  isRealNameVisible Boolean   @default(false)
  isAddressVisible  Boolean   @default(false)
  isBirthdayVisible Boolean   @default(false)
  isPremium         Boolean   @default(false)
  maxWishlistItems  Int       @default(100)
  maxFollowing      Int       @default(100)
  otp               String?
  otpExpires        DateTime?

  email                    String?   @unique // New: Optional for backward compatibility, required for new
  isEmailVerified          Boolean   @default(false)
  emailVerificationToken   String?
  emailVerificationExpires DateTime?
  passwordResetToken       String?
  passwordResetExpires     DateTime?

  lastFeedbackAt  DateTime?
  aiUsageCount    Int          @default(0)
  lastAiUsageDate DateTime     @default(now())
  crawlerLogs     CrawlerLog[]
  feedbacks       Feedback[]
  following       Follow[]     @relation("UserFollowing")
  followedBy      Follow[]     @relation("UserFollowers")
  originalWishes  Item[]       @relation("OriginalWisher")
  purchasedItems  Item[]       @relation("PurchasedBy")
  itemWatches     ItemWatch[]
  purchases       Purchase[]
  wishlists       Wishlist[]
}

model Purchase {
  id        Int      @id @default(autoincrement())
  userId    Int
  type      String
  amount    Float
  currency  String   @default("TWD")
  status    String   @default("COMPLETED")
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

model Wishlist {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  isPublic    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      Int
  maxItems    Int      @default(100)
  items       Item[]
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Item {
  id             Int         @id @default(autoincrement())
  name           String
  price          String?
  currency       String?     @default("USD")
  link           String?
  imageUrl       String?
  notes          String?
  priority       Int         @default(0)
  isPurchased    Boolean     @default(false)
  isHidden       Boolean     @default(false)
  aiStatus       String      @default("PENDING")
  aiError        String?
  wishlistId     Int
  purchasedById  Int?
  originalUserId Int?
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  aiLink         String?
  uploadStatus   String      @default("COMPLETED")
  originalUser   User?       @relation("OriginalWisher", fields: [originalUserId], references: [id])
  purchasedBy    User?       @relation("PurchasedBy", fields: [purchasedById], references: [id])
  wishlist       Wishlist    @relation(fields: [wishlistId], references: [id], onDelete: Cascade)
  watchedBy      ItemWatch[]
}

model ItemWatch {
  id        Int      @id @default(autoincrement())
  userId    Int
  itemId    Int
  createdAt DateTime @default(now())
  item      Item     @relation(fields: [itemId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, itemId])
}

model Feedback {
  id         Int      @id @default(autoincrement())
  content    String
  aiResponse String?
  userId     Int
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id])
}

model Follow {
  followerId  Int
  followingId Int
  createdAt   DateTime @default(now())
  follower    User     @relation("UserFollowing", fields: [followerId], references: [id])
  following   User     @relation("UserFollowers", fields: [followingId], references: [id])

  @@id([followerId, followingId])
}

model CrawlerLog {
  id           Int      @id @default(autoincrement())
  userId       Int
  url          String
  errorMessage String
  debugMessage String?
  createdAt    DateTime @default(now())
  user         User     @relation(fields: [userId], references: [id])
}
