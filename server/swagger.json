{
    "openapi": "3.0.0",
    "info": {
        "title": "Wishlist.ai API",
        "version": "1.0.0",
        "description": "API for Wishlist Application. Use this API to manage wishlists, items, and AI interactions."
    },
    "servers": [
        {
            "url": "https://wishlist-app-production.up.railway.app"
        }
    ],
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            },
            "apiKeyAuth": {
                "type": "apiKey",
                "in": "header",
                "name": "x-api-key"
            }
        }
    },
    "paths": {
        "/api/auth/register": {
            "post": {
                "summary": "Register a new user",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "phoneNumber",
                                    "password",
                                    "email"
                                ],
                                "properties": {
                                    "phoneNumber": {
                                        "type": "string",
                                        "example": "0912345678"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "user@example.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "Password123!"
                                    },
                                    "name": {
                                        "type": "string",
                                        "example": "John Doe"
                                    },
                                    "birthday": {
                                        "type": "string",
                                        "format": "date",
                                        "example": "1990-01-01"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "User created"
                    },
                    "400": {
                        "description": "Invalid input or user exists"
                    }
                }
            }
        },
        "/api/auth/login": {
            "post": {
                "summary": "Login user",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "phoneNumber",
                                    "password"
                                ],
                                "properties": {
                                    "phoneNumber": {
                                        "type": "string",
                                        "description": "Phone number or Email",
                                        "example": "0912345678"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "Password123!"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login successful",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "token": {
                                            "type": "string",
                                            "description": "JWT Token"
                                        },
                                        "user": {
                                            "type": "object"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/users/me/apikey": {
            "post": {
                "summary": "Generate Persistent API Key for AI Agents",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "API Key generated",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "apiKey": {
                                            "type": "string",
                                            "example": "sk_live_..."
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/wishlists": {
            "get": {
                "summary": "Get user's wishlists",
                "security": [
                    {
                        "apiKeyAuth": []
                    },
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "List of wishlists"
                    }
                }
            },
            "post": {
                "summary": "Create a wishlist",
                "security": [
                    {
                        "apiKeyAuth": []
                    },
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "title": {
                                        "type": "string"
                                    },
                                    "description": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Wishlist created"
                    }
                }
            }
        },
        "/api/wishlists/{id}/items": {
            "post": {
                "summary": "Add item to wishlist",
                "security": [
                    {
                        "apiKeyAuth": []
                    },
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "name"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "price": {
                                        "type": "integer"
                                    },
                                    "url": {
                                        "type": "string"
                                    },
                                    "note": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Item added"
                    }
                }
            }
        },
        "/api/wishlists/{id}/items/url": {
            "post": {
                "summary": "Add item by scraping URL",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "url"
                                ],
                                "properties": {
                                    "url": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Item scraped and added"
                    }
                }
            }
        },
        "/api/payment/pay": {
            "post": {
                "summary": "Process Payment (TapPay)",
                "description": "Requires TapPay 'prime' token generated from frontend SDK. AI Agents typically cannot call this directly without a frontend interface to capture card details.",
                "security": [
                    {
                        "apiKeyAuth": []
                    },
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "prime",
                                    "details",
                                    "paymentMethod"
                                ],
                                "properties": {
                                    "prime": {
                                        "type": "string",
                                        "description": "TapPay Prime Token"
                                    },
                                    "details": {
                                        "type": "object",
                                        "properties": {
                                            "amount": {
                                                "type": "integer"
                                            },
                                            "orderId": {
                                                "type": "string"
                                            }
                                        }
                                    },
                                    "paymentMethod": {
                                        "type": "string",
                                        "example": "credit_card"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Payment successful"
                    }
                }
            }
        }
    }
}